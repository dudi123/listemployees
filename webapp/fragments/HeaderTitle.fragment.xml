<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
    <HBox id="titleContainer" class="titleContainer">
        <!-- LEFT CONTAINER -->
        <HBox >
            <VBox class="calendarContainer">        
                <Button id="calendar-date" class="calendar-date" icon="sap-icon://calendar" press="onMonthsPress"/>
            </VBox>
            <Button class="excel-btn" icon="/css/images/excel.png"/>   
        </HBox>
       
        <!-- RIGHT CONTAINER -->
        <VBox class="titleVbox">
            <Text class="titleHeaderText" text="{i18n>title}" />
        </VBox>
    </HBox>
</core:FragmentDefinition>